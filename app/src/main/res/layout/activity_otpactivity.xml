<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="-4dp"
        android:padding="20dp"
        android:text="Enter the top, which you receive"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/getOTPEd"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textheading"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="120dp"
        android:hint="Ente the OTP here"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:inputType="number"/>

    <TextView
        android:id="@+id/changeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't recieved..?, Change Your Number"
        android:layout_below="@id/getOTPEd"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyOTPBt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/changeNumber"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/black"/>


    <ProgressBar
        android:id="@+id/progressOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/verifyOTPBt"
        android:layout_marginTop="30dp"/>


